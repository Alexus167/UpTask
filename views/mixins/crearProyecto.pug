mixin crearProyecto(proyecto = {})
    form.agregar-proyecto(action=`/nuevoProyecto/${proyecto.id || ''}` method="POST")
        .campo 
            label(for="name") Nombre Proyecto: 
            input(value=proyecto.name type="text" id="name" name="name" placeholder="Nombre Proyecto")
        .campo.enviar    
            input(type="submit" value=`${proyecto.name ? 'Guardar' : 'Agregar'}` class="boton")     